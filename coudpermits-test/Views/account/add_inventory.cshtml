
@{
    ViewData["Title"] = "Add inventory";
}


@model Inventory
<h2>Login</h2>


<div>
    @using (Html.BeginForm("login", "home"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
       


        <div class="loginform align-items-center" >
    <div class="col-sm">
  <div class="row">
            <div class="ol-lg-2">@Html.LabelFor(a => a.Name)</div>
            <div class="ol-lg-10">@Html.TextBoxFor(a => a.Name, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="ol-lg-2">@Html.LabelFor(a => a.ID)</div>
            <div class="ol-lg-10">@Html.TextBoxFor(a => a.ID, new { @class = "form-control", type="Password" })</div>
        </div><br />
         <div class="row">
            <div class="ol-lg-2">@Html.LabelFor(a => a.Re_order_level)</div>
            <div class="ol-lg-10">@Html.TextBoxFor(a => a.Re_order_level, new { @class = "form-control" })</div>
        </div><br />
         <div class="row">
            <div class="ol-lg-2">@Html.LabelFor(a => a.Unit_price)</div>
            <div class="ol-lg-10">@Html.TextBoxFor(a => a.Unit_price, new { @class = "form-control" })</div>
        </div><br />
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>
</div>

    }

</div>